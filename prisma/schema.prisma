generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String     @id @unique
  displayName String
  username    String
  avatarUrl   String?
  bots        Bot[]
  bio         String     @default("Hello from BotlistAPI")
  bannerUrl   String?
  flags       BigInt     @default(0)
  locale      UserLocale @default(PT_BR)
}

model Bot {
  id               BigInt   @id @default(autoincrement())
  avatarUrl        String
  discordId        String   @unique
  botOwnerId       String?
  botOwner         User?    @relation(fields: [botOwnerId], references: [id], onDelete: Cascade)
  approved         Boolean  @default(false)
  longDescription  String
  shortDescription String
  websiteUrl       String?
  sourceCode       String?
  supportServer    String?
  prefixes         String[]
  tags             String[]
}

enum UserLocale {
  PT_BR
}
